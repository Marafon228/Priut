<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priut.MainPage"
             >

    <ContentPage.Content>
        <Grid>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Login"></Label>
                    <Entry WidthRequest="120" Text="{Binding CurrentUser.Login}"></Entry>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Password"></Label>
                    <Entry WidthRequest="120" IsPassword="True" Text="{Binding CurrentUser.Password}"></Entry>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Sign In"  Clicked="Btn_SignIn"></Button>
                    <Button Text="Registration" Clicked="Btn_Reg"></Button>
                </StackLayout>

            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>
