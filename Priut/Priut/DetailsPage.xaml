<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Priut.DetailsPage">
    <ContentPage.Content>
        <Grid BindingContext="{Binding CurrentDog}">
            <StackLayout>
                <Label  Margin="5" FontSize="30" HorizontalOptions="Center" Text="{Binding Name}"/>
                <Image HeightRequest="250" Source="{Binding Path=Photo}" HorizontalOptions="FillAndExpand"/>
                <Label Margin="5" FontSize="30" HorizontalOptions="Center" Text="{Binding Description}"/>
                <Button Text="Узнать номер" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </Grid>
        

    </ContentPage.Content>
</ContentPage>